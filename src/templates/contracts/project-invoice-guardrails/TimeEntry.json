{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Time Entry",
  "description": "Individual time entry record from time tracking systems",
  "required": ["id", "employeeId", "projectId", "date", "hours"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the time entry"
    },
    "employeeId": {
      "type": "string",
      "description": "Employee/user who logged the time"
    },
    "employeeName": {
      "type": "string",
      "description": "Full name of the employee"
    },
    "projectId": {
      "type": "string",
      "description": "Project identifier this time was logged against"
    },
    "taskId": {
      "type": "string",
      "description": "Specific task or activity identifier"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date when the work was performed (YYYY-MM-DD)"
    },
    "hours": {
      "type": "number",
      "minimum": 0,
      "maximum": 24,
      "description": "Number of hours worked (supports decimals)"
    },
    "rate": {
      "type": "number",
      "minimum": 0,
      "description": "Hourly billing rate in base currency"
    },
    "billableAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Calculated billable amount (hours Ã— rate)"
    },
    "task": {
      "type": "string",
      "description": "Task or activity description"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or comments"
    },
    "billable": {
      "type": "boolean",
      "default": true,
      "description": "Whether this time entry is billable to the client"
    },
    "invoiceId": {
      "type": ["string", "null"],
      "description": "Invoice ID if this entry has been billed"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "submitted", "approved", "billed", "disputed"],
      "default": "submitted",
      "description": "Current status of the time entry"
    },
    "approvedBy": {
      "type": "string",
      "description": "Manager or supervisor who approved this entry"
    },
    "approvedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the time entry was approved"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the time entry was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the time entry was last updated"
    },
    "metadata": {
      "type": "object",
      "description": "Additional system-specific data",
      "properties": {
        "sourceSystem": {
          "type": "string",
          "description": "Origin system (harvest, toggl, clickup, etc.)"
        },
        "externalId": {
          "type": "string",
          "description": "ID in the source system"
        },
        "category": {
          "type": "string",
          "description": "Work category or type"
        },
        "location": {
          "type": "string",
          "description": "Work location (office, remote, client site)"
        }
      }
    }
  }
}